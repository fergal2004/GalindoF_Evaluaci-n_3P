<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Base Colors -->
    <Color x:Key="PrimaryColor">#0078D4</Color> <!-- Azul de Microsoft (as used in your styles) -->
    <Color x:Key="SecondaryColor">#6C757D</Color> <!-- Gris oscuro (as used in your styles) -->
    <Color x:Key="AccentColor">#00B7C3</Color> <!-- Azul verdoso -->
    <Color x:Key="DangerColor">#DC3545</Color> <!-- Rojo (as used in your styles) -->
    <Color x:Key="SuccessColor">#28A745</Color> <!-- Verde -->

    <!-- Colores para Modo Claro (as used in your styles) -->
    <Color x:Key="LightBackground">#F8F9FA</Color>
    <Color x:Key="LightCardBackground">#FFFFFF</Color>
    <Color x:Key="LightBorder">#DEE2E6</Color>
    <Color x:Key="LightPrimary">#0078D4</Color> <!-- Primary color for light theme -->
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="Gray800">#343A40</Color>

    <!-- Colores para Modo Oscuro (as used in your styles) -->
    <Color x:Key="DarkBackground">#212529</Color>
    <Color x:Key="DarkCardBackground">#343A40</Color>
    <Color x:Key="DarkBorder">#495057</Color>
    <Color x:Key="DarkPrimary">#005A9E</Color> <!-- Primary color for dark theme -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Gray200">#ADB5BD</Color>

    <!-- Existing default MAUI template colors (keep them if other parts of your app use them) -->
    <!-- You might want to map these to your custom colors or remove them if unused. -->
    <!-- For now, I'll keep them to avoid breaking other potential references. -->
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryDark">#ac99ea</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="SecondaryDarkText">#9880e5</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- SolidColorBrush definitions (ensure they use the correct color keys) -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

</ResourceDictionary>
